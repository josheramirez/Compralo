		<section class="stats">
		<%= render 'shared/stats' %>
		</section>

		<% if vendedor? %>
			<section class="micropost_form">
			
				<%= render 'shared/micropost_form' %>
			</section>
		<% end %>

	</aside>

	<div class="col-md-8">
		<h3>Ultimas publicaciones</h3>
