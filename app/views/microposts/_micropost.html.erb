<li id="micropost-<%= micropost.id %>">
	<!-- <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %> -->
	<span class="user"><%= link_to micropost.user.name, micropost.user %> (<%= micropost.tipo %>)</span>
	<span class="content"><%= micropost.content %></span>
	
		<% if micropost.es_venta? %>
			<span class="content">precio: <%= micropost.precio %> cantidad: <%= micropost.cantidad %></span>

			<% if micropost.user==current_user %>
			
			<% else %>
				

				<span class="comprar"><%= link_to "Comprar",{ :controller => :microposts, :action => :algo , :id => micropost.id},{class: "btn btn-lg btn-primary"}%></span> 
				<span class="comprar"><%= link_to "Carro ",{ :controller => :microposts, :action => :algo , :id => micropost.id},{class: "btn btn-lg btn-primary"}%></span> 

			<% end %>

			
		<% end %>

	

	<span class="timestamp">
	Posted <%= time_ago_in_words(micropost.created_at) %> ago.
	<% if current_user?(micropost.user) %>
	<%= link_to "delete", micropost, method: :delete,
									 data: { confirm: "Estas seguro?" } %>
	<% end %>
	</span>


</li>