<% provide(:title, "Inicia sesion") %>
<h1>Inicia sesion en Compralo</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
	<%= form_for(:session, url: login_path) do |f| %>
		<%= f.label :email %>
		<%= f.email_field :email, class: 'form-control' %>
		<%= f.label :password %>
		<%= link_to "(Olvidaste tu cuenta?)", new_password_reset_path %>
		<%= f.password_field :password, class: 'form-control' %>
		<%= f.label :remember_me, class: "checkbox inline" do %>
			<%= f.check_box :remember_me %>
			<span>Recuerdame en este pc</span>
		<% end %>
		<%= f.submit "Iniciar sesion", class: "btn btn-primary" %>
	<% end %>
	<p>Eres nuevo?
		<%= link_to "Registrate!", singup_path %>
	</p>
	</div>
</div>

